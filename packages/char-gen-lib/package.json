  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@tsconfig/bun": "^1.0.7",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "bun": "^1.1.29"
  },
  "dependencies": {}
